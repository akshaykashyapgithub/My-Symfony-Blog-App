{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="post-show-container">
    <div class="post-show-card">
        <h1 class="post-show-title">{{ post.title }}</h1>
        <div class="post-show-meta">
            by <strong>{{ post.author.email }}</strong> on {{ post.createdAt|date('d M Y, H:i') }}
        </div>

        <div class="post-show-content">
            <p>{{ post.content|nl2br }}</p>
        </div>

        {% if app.user and app.user == post.author %}
            <div class="post-show-actions">
                <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn-edit">Edit</a>
                <a href="{{ path('app_post_delete', {id: post.id}) }}" class="btn-delete"
                   onclick="return confirm('Are you sure you want to delete this post?');">Delete</a>
            </div>
        {% endif %}

       <div class="back-link">
            <br>
            <a href="{{ path('app_post_index') }}">‚Üê Back to posts</a>
        </div>
    </div>
</div>
{% endblock %}
